@model Cliente
@{
    ViewBag.Title = "Actualizar";
}

<h2>Actualizar Cliente</h2>

<hr />

<form method="post" action="@Url.Action("Actualizar","Cliente")">
    <div class="form-group">
        <label>Codigo</label>
        @Html.TextBoxFor(x => x.codcli, new { @class = "form-control", @readonly="readonly" })
    </div>
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(x => x.nomcli, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Direccion</label>
        @Html.TextBoxFor(x => x.direccion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Status</label>
        @Html.TextBoxFor(x => x.status, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Enviar" />
        <a href="@Url.Action("Index","Cliente")">Regresar</a>
    </div>
</form>


